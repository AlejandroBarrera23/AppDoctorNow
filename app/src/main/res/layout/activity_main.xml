<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="16dp">

    <!-- Logo de la aplicación -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_app2"/>

    <!-- Botón para iniciar sesión -->
    <Button
        android:id="@+id/btnIniciarSesionAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión (Admin/Recepcionista)"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/medical_blue_dark"
        android:padding="16dp"
        android:layout_marginBottom="10dp" />

        <!-- Botón para iniciar sesión -->
        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión (Paciente)"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/medical_blue"
            android:padding="16dp"
            android:layout_marginBottom="10dp" />

    <!-- Botón para crear cuenta -->
    <Button
        android:id="@+id/btnCrearCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta (Paciente)"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:backgroundTint="@color/azul_medico"/>

</LinearLayout>
    </ScrollView>