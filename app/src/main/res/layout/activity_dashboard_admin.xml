<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón de Cerrar Sesión (alineado a la derecha) -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textSize="14sp"
            android:textColor="@color/azul_medico"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_gravity="end"
            android:gravity="end|center_vertical" />

        <!-- Título del Dashboard -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard Admin/Recepcionista"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

        <!-- Calendario Interactivo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calendario de Citas"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.example.appdoctornow.ui.custom.CustomCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            tools:ignore="MissingConstraints" />

        <!-- Filtros de Búsqueda -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtrar Citas"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Filtro por Fecha -->
            <EditText
                android:id="@+id/etFiltrarFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Filtrar por fecha"
                android:inputType="none"
                android:focusable="false"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <!-- Filtro por Médico -->
            <Spinner
                android:id="@+id/spinnerFiltrarMedico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Botón para Aplicar Filtros -->
        <Button
            android:id="@+id/btnAplicarFiltro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicar Filtros"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/azul_medico"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Lista de Citas del Día Seleccionado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Citas del Día Seleccionado"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            tools:listitem="@layout/item_cita_admin" />

        <!-- Botón para Agendar Nueva Cita -->
        <Button
            android:id="@+id/btnAgendarCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendar Nueva Cita"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/azul_medico"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>